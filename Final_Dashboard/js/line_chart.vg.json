{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1000,
    "height": 500,
    "title": { "text": "Population Density of ASEAN Countries 2016-2020" },
    "data": {
      "url": "https://raw.githubusercontent.com/jqthum/FIT3179-Vis2/main/Final_Dashboard/data/Population%20of%20ASEAN%20Countries%202016-2020.csv"
    },
    "encoding": {
        "color": {
            "field": "Country",
            "type": "nominal"
        }
    },
    "layer": [{
      "mark": {"type": "line", "cursor": "pointer"},
      "encoding": {
        "x": {"field": "Year", "type": "nominal"},
        "y": {"field": "Density", "type": "quantitative", "title": "Population density (person / km2)"},
        "color": {"field": "Country", "type": "nominal"},
        "opacity": {
            "condition": {"selection": "series", "value": 0.6},
            "value": 0.2
            }            
        },
        "selection":{
          "series": {
            "type": "multi",
            "encodings": ["color"],
            "on": "click",
            "bind": "legend"
          }
        }
    },
    {
      "mark": {"type": "circle", "cursor": "pointer"},
        "encoding": {
          "x": {"field": "Year", "type": "nominal"},
          "y": {"field": "Density", "type": "quantitative"},
          "color": {"field": "Country", "type": "nominal"},
          "opacity":{
            "condition":{"selection": "series2", "value": 1},
            "value":0.2
          },
          "tooltip": [
              {"field": "Country", "type": "nominal", "title": "Country"},
              {"field": "Density", "type": "quantitative", "title": "Population density (Person / km2)"}
            ]
          },
          "selection":{
            "series2": {
              "type": "multi",
              "encodings": ["color"],
              "on": "click",
              "bind": "legend"
            }
          } 
    }],
    "legend": [
  {
    "fill": "color",
    "encode": {
      "title": {
        "update": {
          "fontSize": {"value": 14}
        }
      },
      "labels": {
        "interactive": true,
        "update": {
          "fontSize": {"value": 14},
          "fill": {"value": "black"}
        },
        "hover": {
          "fill": {"value": "firebrick"}
        }
      },
      "symbols": {
        "update": {
          "stroke": {"value": "transparent"}
        }
      },
      "legend": {
        "update": {
          "stroke": {"value": "#ccc"},
          "strokeWidth": {"value": 1.5}
        }
      }
    }
  }
]
  
  }
  
